package exercise;

import java.util.Scanner;

public class Ex3_5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		System.out.println("금액을 입력");
		int value = sc.nextInt();
		
		
		System.out.println(value/100 +("00"));
	}

}
